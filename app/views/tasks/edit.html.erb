<h3>スケジュール編集</h3>
<%= render "shared/error", obj:@task %>

<%= form_for @task do |f| %>
    <table>
        <tr>
            <th><%= f.label :title, "タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        
         <tr>
            <th><%= f.label :start, "開始日" %></th>
            <td><%= f.date_field :start %></td>
        </tr>
        
        <tr>
            <th><%= f.label :finish_day, "終了日" %></th>
            <td><%= f.date_field :finish_day %></td>
        </tr>
        
        <tr>
            <th><%= f.label :allday, "終日" %></th>
            <td><%= f.check_box :allday, {class: "check_box"}, "true", "false" %><br>終日の場合はチェックを入れます</td>
        </tr>
        
        <tr>
            <th><%= f.label :memo, "スケジュールメモ" %></th>
            <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    
    <div>
        <ul>
            <li><%= f.submit"スケジュールの編集を完了する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
        </ul>
    </div>
<% end %>
